<% include ../../../partials/head %>

    <section class="container">
        <header>
            <h1>Editar vaga</h1>
            <a href="javascript: window.history.go(-1)" class="btn">Voltar</a>
        </header>

        <form method="POST">
            <fieldset>
                <div class="input-field">
                    <input id="titulo" name="titulo" type="text" class="validate" placeholder="Digite o título aqui" />
                    <label class="active" for="titulo">Título</label>
                </div>
    
                <div class="input-field">
                    <textarea id="descricao" name="descricao" type="text" class="materialize-textarea" placeholder="Digite uma descrição para a vaga aqui"></textarea>
                    <label class="active" for="descricao">Descrição</label>
                </div>
    
                <div>
                    <label for="categoria">Categoria</label>
                    <select class="browser-default" name="categoria" id="categoria">
                        <option value="">Selecione uma categoria</option>
                        <% categorias.forEach(cat => { %>
                            <option value="<%= cat.id %>"><%= cat.name %></option>
                        <% }) %>
                    </select>
                </div>
            </fieldset>

            <fieldset>
                <button type="submit" class="btn waves-effect waves-light" type="submit" name="action">Cadastrar</button>
                <button type="button" class="btn waves-effect waves-light" type="submit" name="action">Limpar</button>
            </fieldset>
        </form>
    </section>

<% include ../../../partials/footer %>